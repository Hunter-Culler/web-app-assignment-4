<head>
    <link rel="stylesheet" href="/css/assignment3.css">
    
</head>

<body>
    <div class="row d-flex justify-content-center">
        <div class="column left">
            <div class="card">
                <div class="card-header usersHeader">Other Users</div>
                <div class="card-body">
                    <% users.forEach(user => { %>
                        <p>
                            <%= user.firstname %> <%=user.lastname %>
                        </p>
                    <% }) %>
                </div>
            </div>
        </div>
        <div class="column middle">
            <div class="feed">
                <div class="card post">
                    <div class="form-data card-body">
                        <div class="row d-flex justify-content-center"></div>
                        <form action="<%=`/posts/${currentUser._id}/create` %>" method="POST">
                            <div row>
                                <textarea style="resize: none;" class="form-control" type="text" name="caption" id="txtCaption" rows="1"
                                    placeholder="type your thoughts here" autofocus required></textarea>
                                <hr style="margin-top: 10px;">
                                <div>
                                    <button type="submit" class="btn btn-primary">Post</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <% posts.forEach(post => { %>
                    <div class="card post">
                        <div class="card-header post-header text-start">
                            <img src="/images/avatar.png" alt="Avatar" class="avatar"> <%=post.username %>
                            <a href="<%= `/posts/${post.id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure?')">Delete</a>
                        </div>
                        <div class="card-body">
                            <p class="card-text post-text">
                                <%= post.caption %>
                            </p>
                            <div class="post-published">
                                Published: <%= post.createdAt %>
                            </div>
                        </div>
                    </div>
                <% }) %>
                </div>
        </div>
        <div class="column right">
            <div class="card">
                <div class="card-header hashtagHeader">Trending Hashtags</div>
                <div class="card-body">
                    <% hashtags.forEach(hashtag => { %>
                        <p>
                            #<%= hashtag.hashtag %>
                        </p>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>